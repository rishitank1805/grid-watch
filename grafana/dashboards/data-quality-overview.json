{
  "dashboard": {
    "title": "Data Quality Overview",
    "tags": ["smartmeter", "data-quality"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Active Meters",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "rawSql": "SELECT COUNT(DISTINCT meter_id) as value FROM validated_readings WHERE time >= NOW() - INTERVAL '24 hours'",
            "format": "table",
            "datasource": "TimescaleDB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Events per Minute",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "rawSql": "SELECT time_bucket('1 minute', time) as time, COUNT(*) as events FROM validated_readings WHERE $__timeFilter(time) GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": "TimescaleDB"
          }
        ]
      },
      {
        "id": 3,
        "title": "Missing Intervals per Hour",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "rawSql": "SELECT time_bucket('1 hour', time) as time, COUNT(*) as gaps FROM gap_alerts WHERE $__timeFilter(time) GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": "TimescaleDB"
          }
        ]
      },
      {
        "id": 4,
        "title": "Percentage of Late Events",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "rawSql": "SELECT time_bucket('1 hour', time) as time, (COUNT(*)::float / NULLIF((SELECT COUNT(*) FROM validated_readings WHERE time_bucket('1 hour', time) = ga.time), 0) * 100) as late_pct FROM late_events ga WHERE $__timeFilter(time) GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": "TimescaleDB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Top 10 Meters by Gap Frequency",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "rawSql": "SELECT meter_id, COUNT(*) as gap_count, SUM(gap_minutes) as total_gap_minutes FROM gap_alerts WHERE $__timeFilter(time) GROUP BY meter_id ORDER BY gap_count DESC LIMIT 10",
            "format": "table",
            "datasource": "TimescaleDB"
          }
        ]
      },
      {
        "id": 6,
        "title": "Data Quality Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "rawSql": "SELECT COUNT(*) FILTER (WHERE status = 'OK') as ok_count, COUNT(*) FILTER (WHERE status = 'LATE') as late_count FROM validated_readings WHERE time >= NOW() - INTERVAL '1 hour'",
            "format": "table",
            "datasource": "TimescaleDB"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}

